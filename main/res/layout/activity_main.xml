<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:background="#FF0B0B0B"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.example.maaz.tictactoe.MainActivity">

<TextView
    android:layout_width="match_parent" android:textColor="#ffff"
    android:layout_height="wrap_content" android:text="Tic Tac Toe"
    android:gravity="center" android:textSize="28sp"/>
    <TableLayout
        android:id="@+id/table1" android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:textSize="45sp"
                android:layout_weight="1"
                android:text="" />


            <Button
                android:id="@+id/button2"
                android:textSize="45sp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="" />

            <Button
                android:id="@+id/button3"
                android:textSize="45sp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button4"
                android:textSize="45sp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="" />

            <Button
                android:id="@+id/button5"
                android:textSize="45sp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="" />

            <Button
                android:id="@+id/button6"
                android:textSize="45sp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button7" android:textSize="45sp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="" />

            <Button
                android:id="@+id/button8"
                android:textSize="45sp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="" />

            <Button
                android:id="@+id/button9"
                android:textSize="45sp"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="" />


        </TableRow>
    </TableLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="reset"
        android:onClick="reset"/>



    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent" android:background="#800000"
            android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:textColor="#ffff"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content" android:textSize="28sp" android:gravity="center" android:text="X"/>
            <TextView android:textColor="#ffff"
                android:layout_width="0dp" android:layout_weight="1" android:gravity="center"
                android:layout_height="wrap_content" android:textSize="28sp" android:text="Score"/>
            <TextView android:textColor="#ffff"
            android:layout_width="0dp" android:layout_weight="1" android:gravity="center"
            android:layout_height="wrap_content" android:textSize="28sp" android:text="Y"/>        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
         android:orientation="horizontal" android:background="#FF0"
        android:layout_height="match_parent">
        <TextView
           android:id="@+id/xScore" android:layout_width="0dp" android:gravity="center" android:textSize="75sp" android:layout_weight="1"
            android:layout_height="match_parent" android:text="0"/>
        <TextView
           android:id="@+id/yScore" android:layout_width="0dp" android:gravity="center" android:textSize="75sp" android:layout_weight="1"
            android:layout_height="match_parent" android:text="0"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
